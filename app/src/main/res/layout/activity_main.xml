<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/diy_bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="[WatsonAPI_ForLearn_beta2.1] - Android"
            android:textColor="#FFFFFF"
            android:textSize="8dp" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="  hi!nice to meet you!"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/LL_2"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_bn"
                    android:text="Tone Analyzer"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_t2s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_bn"
                    android:text=" Text to Speech"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/btn_fanyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_bn"
                    android:text="Language Translator"
                    android:textColor="#FFFFFF"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL_3"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="OR\n"
                    android:textSize="24dp" />


            </LinearLayout>
        </LinearLayout>

        <!--      <TextView
                  android:id="@+id/tv_title"
                  android:layout_width="840px"
                  android:layout_height="680px"
                  android:layout_below="@+id/ll"
                  android:layout_centerHorizontal="true"
                  android:background="#A9A9A9"
                  android:text="[LOG.i]:  hi!nice to meet you!"
                  android:textColor="#696969"
                  android:textSize="10dp" />-->

        <Button
            android:layout_below="@+id/ll"
  
            android:id="@+id/btn_3"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/button_state"
            android:text="Visual Recognition"
            android:textColor="#FFFFFF"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>